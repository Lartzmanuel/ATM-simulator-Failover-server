<div class="wrapper">
    <p class="header">REGISTER</p>
    <div class="name-wrap">
        <label class="label">NAME</label>
        <input class="input" type="text" id="name" name="name">
    </div>
    <div class="flex">
        <div class="DOB-wrap">
            <label class="label">DATE OF BIRTH</label>
            <input class="input" type="text" id="DOB" name="DOB">
        </div>
        <div class="pin-wrap">
            <label class="label">PIN</label>
            <input class="input" type="text" id="pin" name="pin">
        </div>
    </div>
    
    <div class="email-wrap">
        <label class="label">EMAIL</label>
        <input class="input" type="email" id="email" name="email">
    </div>
    <div class="address-wrap">
        <label class="label">HOUSE ADDRESS</label>
        <input class="input" type="text" id="address" name="address">
    </div>
    <div class="occupation-wrap">
        <label class="label">OCCUPATION</label>
        <input class="input" type="text" id="occupation" name="occupation">
    </div>
    <div class="telephone-wrap">
        <label class="label">MOBILE NUMBER</label>
        <input class="input" type="text" id="telephone" name="telephone">
    </div>
    <div class="ID-wrap">
        <label class="label">NATIONAL ID</label>
        <input class="input" type="text" id="id" name="id">
    </div>
    <div class="gender-wrap">
        <p class="label">GENDER</p>
        <input type="radio" id="male-gender" name="gender" value="male">
        <label for="male-gender" class="label">MALE</label>
        <input type="radio" id="female-gender" name="gender" value="female">
        <label class="label" for="female-gender">FEMALE</label>
    </div>
    <div>
        <button class="btn" type="submit">SIGN UP</button>
    </div>
</div>