<div class="container">

    <div class="card-container">
        <div class="front">
            <div class="image">
                <img src="/images/chip.png" height="50" alt="">
                <img src="/images/visa.png" height="40" alt="">
            </div>
            <div class="card-number-box">
                ###############
            </div>
            <div class="flexbox">
                <div class="box">
                    <span>card holder</span>
                    <div class="card-holder-name">full name</div>
                </div>
                <div class="box">
                    <span>expires</span>
                    <div class="expiration">
                        <span class="exp-month">mm</span>
                        <span class="exp-year">yy</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="back">
            <div class="stripe"></div>
                <div class="box">
                    <span>cvv</span>
                    <div class="cvv-box"></div>
                    <img src="/images/visa.png" height="40" alt="">
                </div>
        </div>

    </div>

    <form action="">
        <div class="inputBox">
            <span class="label">card number</span>
            <input type="text" name="cardnumberInput" id="cardnumberInput" oninput="this.value= this.value.replace(/[^0-9]/g, '').substring(0, 13);" maxlength="13" class="card-number-input" required>
        </div>
        <div class="inputBox">
            <span class="label">name</span>
            <input type="text" name="nameInput" id="nameInput" class="card-holder-input" required>
        </div>
       
        <div class="flexbox">
            <div class="inputBox">
                <span class="label">expiration month</span>
                <select name="monthInput" id="monthInput" class="month-input">
                    <option value="month" selected disabled></option>
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03">03</option>
                    <option value="04">04</option>
                    <option value="05">05</option>
                    <option value="06">06</option>
                    <option value="07">07</option>
                    <option value="08">08</option>
                    <option value="09">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="inputBox">
                <span class="label">expiration year</span>
                <select name="yearInput" id="yearInput" class="year-input">
                    <option value="year" selected disabled></option>
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                    <option value="2026">2026</option>
                    <option value="2027">2027</option>
                    <option value="2028">2028</option>
                    <option value="2029">2029</option>
                    <option value="2030">2030</option>
                    <option value="2031">2031</option>
                    <option value="2032">2032</option>
                    <option value="2033">2033</option>
                    <option value="2034">2034</option>
                </select>
            </div>
            <div class="inputBox">
                <span class="label">cvv</span>
                <input type="text" maxlength="4" class="cvv-input">
            </div>
        </div>

        <div>
            <button class="btn" type="submit">SIGN IN</button>
        </div>
        <p class="no-account">Don't have an account? | <a href="/register" class="signup"><span class="signup">Sign Up</span></a></p>

    </form>
</div>